<p>新規ユーザ登録</p>
<%= form_for @user, url: {action: :create} do |f| %>
    <%= f.label :uid, 'ID' %><br>
    <%= f.text_field :uid %><br>
    <%= f.label :password, 'パスワード' %><br>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation, 'パスワード(確認)' %><br>
    <%= f.password_field :password_confirmation %>
    <p><%= f.submit '作成' %></p>
<% end %>